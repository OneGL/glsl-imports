  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@onegl/glsl-parser": "git+https://github.com/OneGL/glsl-parser.git"
  }
}
